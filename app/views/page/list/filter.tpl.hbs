<div class="form-horizontal well well-small">
    <div id="{{id}}-fields"></div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="button" id="{{id}}-search" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
            <button type="button" id="{{id}}-clear" class="btn btn-default"><i class="fa fa-eraser"></i> Clear</button>
        </div>
    </div>
    
    <input class="{{id}}-field" type="hidden" id="{{id}}-page" value="{{page}}" />
    <input class="{{id}}-field" type="hidden" id="{{id}}-per-page" value="{{perPage}}" />
</div>